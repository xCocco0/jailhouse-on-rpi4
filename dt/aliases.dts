/dts-v1/;
/plugin/;
/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target-path = "/";
		__overlay__ {
			aliases {
				/* Needed to enable UART1 for use by TF-A */
				uart1 = "/soc/serial@7e215040";

				/* Ensure stable /dev/mmcblk0 assignment */
				mmc0 = "/emmc2bus/emmc2@7e340000";
				mmc1 = "/soc/sdhci@7e300000";
			};
		};
	};
};
